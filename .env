# Note: These values are for local development only. 
# When using Docker, the values in docker-compose.yml take precedence.

FLASK_APP=app
FLASK_ENV=development
FLASK_DEBUG=1

# For local development - when running with Docker, this is configured in docker-compose.yml
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dataroom

# Secret keys - change these in production
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Upload folder path
UPLOAD_FOLDER=instance/uploads 